@model ChangePasswordViewModel
@{ViewData.AddActivePage(ManageNavPages.ChangePassword);}

<h3 style="text-align:center; margin-top:150px; margin-bottom: 30px; font-weight:200; letter-spacing:1.5px;">CHANGE PASSWORD</h3>

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div style="margin:50px 100px;">
    <div class="row">
        <div class="col s6">
            <form method="post">
                <div>
                    <label class="textGrey"  asp-for="OldPassword"></label>
                    <input asp-for="OldPassword" style="color: #cfd8dc" />
                    <span asp-validation-for="OldPassword"></span>
                </div>
                <div>
                    <label class="textGrey"  asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" style="color: #cfd8dc" />
                    <span asp-validation-for="NewPassword"></span>
                </div>
                <div>
                    <label class="textGrey"  asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" style="color: #cfd8dc" />
                    <span asp-validation-for="ConfirmPassword"></span>
                </div>
                <button style="margin-top:10px;" type="submit" class="waves-effect waves-light btn sharpCorners black-btn">Update Password</button>
            </form>
            <div style="margin-top: 10px;">
                <a class="hover-underline" onclick="window.history.go(-1)">Cancel</a>
            </div>
        </div>
    </div>
</div>

<div style="height:300px;"></div>
