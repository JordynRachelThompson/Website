@model IndexViewModel
@inject SignInManager<ApplicationUser> SignInManager
@Html.Partial("_StatusMessage", Model.StatusMessage)

@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
    //ViewData.AddActivePage(ManageNavPages.Index);
}


<h3 style="text-align:center; margin-top:100px; margin-bottom: 30px; font-weight:200; letter-spacing:1.5px;">MANAGE YOUR ACCOUNT</h3>
<div><p style="text-align: center; margin-top: 10px; color: #81cac4;">@ViewBag.Updated</p></div>
<div style="margin:50px 100px;">
    <div class="row">
        <div class="col s6">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="textGrey">Change Email</label>
                    <input asp-for="Email" class="form-control" style="color:#cfd8dc" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <button style="margin-top:10px; background-color:#81cac4; font-weight:bold;" type="submit" class=" waves-effect waves-light lightTeal-hover btn sharpCorners black-text">Save Changes</button>
            </form>
            <div style="margin-top: 10px;">
                <p><a class="hover-underline" asp-action="ChangePassword">Change Password</a></p>
                <p><a class="hover-underline" onclick="window.history.go(-1)">Cancel</a></p>
                @*@await Html.PartialAsync("_ManageNav")*@
            </div>
        </div>
    </div>
</div>

<div style="height:300px;"></div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
