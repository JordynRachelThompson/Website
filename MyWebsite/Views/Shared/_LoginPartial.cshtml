@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@model int

<link rel="stylesheet" href="~/css/materialize.css" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.2/css/all.css" integrity="sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns" crossorigin="anonymous">


@if (SignInManager.IsSignedIn(User))
{
    <div class="container">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
            <ul id="buttonInLine">
                <li>
                    <a class="hover-underline userName" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" style="font-size:20px; margin-right: 10px;">Hello @User.Identity.Name!</a>
                </li>
                <li>
                    <button type="submit" class="waves-effect waves-light btn sharpCorners black-btn fas fa-sign-out-alt " style="background-color: #080C10; font-size: 23px;"></button>
                </li>
            </ul>
        </form>
    </div>
}
else
{
    <div class="container">
        <ul id="buttonInLine">
            <li><a asp-area="" asp-controller="Account" asp-action="Register" class="waves-effect waves-light btn sharpCorners black-btn" style="margin-right: 5px;">Register</a></li>
            <li><a href='@Url.Action("Login", "Account", new { AppType = Model}, null)' class="waves-effect waves-light btn sharpCorners black-btn">Log in</a></li>

        </ul>
    </div>
}

<style>

    .lightTeal-icon-hover:hover {
        color: #a7f2ec !important;
    }
</style>

