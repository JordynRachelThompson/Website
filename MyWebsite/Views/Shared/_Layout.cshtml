<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JordynThompson</title>

    <link href="~/css/site.css" rel="stylesheet" />

    <environment>
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="~/css/materialize.css" />
    </environment>
</head>

<body style="color:#cfd8dc !important; background-color:black;">
    @*NAVBAR*@
    <div class="navbar-fixed">
        <nav class="black">
            <div class="nav-wrapper" style="margin-left:100px; margin-right: 100px;">
                <a href="#!" class="brand-logo" style="letter-spacing:2.5px; color:#cfd8dc;">JT</a>
                <ul class="right hide-on-med-and-down">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">ABOUT</a></li>
                    <li><a asp-area="" asp-controller="Projects" asp-action="Index">PROJECTS</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">CONTACT</a></li>
                </ul>
            </div>
        </nav>
    </div>

    @RenderBody()
    @RenderSection("Scripts", required: false)

    @*<footer>
            <p>&copy; 2018 - JordynThompson</p>
        </footer>*@

    <environment>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/materialize.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
</body>
</html>

