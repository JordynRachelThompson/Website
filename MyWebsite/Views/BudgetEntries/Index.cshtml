                    <input placeholder="0" id="budget-limit-amount" style="margin-top: 25px;" type="number" class="validate">
                    <div style="margin-top:23px;">@Html.ActionLink(@stringSet, "Budget", "Projects", null, new { @class = "yellow-button" })</div>
                    <div id="grocery-graph" style="display:none;"><p>Display grocery graph - Limit: </p></div>
                </div>
            </form>
            <form asp-action="Add" class="col m4">
                <h5 style="margin-top:25px; font-weight:bold;">Add Transaction</h5>
                <h5 style="margin-top:25px">Item</h5>
