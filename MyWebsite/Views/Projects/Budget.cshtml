@using Microsoft.AspNetCore.Identity
@using MyWebsite.Models
@model MyWebsite.Models.BudgetEntries
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{ string stringSet = "SET";}

<h3 style="text-align:center; color:#cfd8dc; margin-top:100px;">Budget App</h3>

<div style="text-align:center; margin-top:70px;">@{ Html.RenderPartial("_LoginPartial"); }</div>

@if (!SignInManager.IsSignedIn(User))
{
    <p style="text-align:center; font-size:20px;">Please log in or register first to use the app.</p>
}
else
{
    <div style="border-bottom: 1px dotted #76ff03;"></div>

    <div class="container">
        <div class="row">
            <form class="col m4" style="margin-right:100px;">
                <h5 style="margin-top:77px; font-weight:bold;">Set Grocery Budget</h5>
                <div class="input-field">
                    <i class="material-icons prefix" style="margin-top:30px; color:#76ff03;">attach_money</i>
                    <input placeholder="0" id="budget-limit-amount" style="margin-top: 25px;" type="number" class="validate">
                    <div style="margin-top:23px;">@Html.ActionLink(@stringSet, "Budget", "Projects", null, new { @class = "yellow-button" })</div>
                    <div id="grocery-graph" style="display:none;"><p>Display grocery graph - Limit: </p></div>
                </div>

            </form>
            <form class="col m4">
                <h5 style="margin-top:25px; font-weight:bold;">Add Transaction</h5>
                <h5 style="margin-top:25px">Item</h5>
                <div class="input-field">
                    <input name ="groceryDescription" placeholder="Apples" id="purchase-item" style="margin-top: 25px;" type="text" class="validate">
                </div>
                <h5 style="margin-top:25px;">Price</h5>
                <div class="input-field">
                    <i class="material-icons prefix" style="margin-top:30px; color:#76ff03;">attach_money</i>
                    <input name="groceryCost" placeholder="0" id="budget-limit-amount" style="margin-top: 25px;" type="number" class="validate">


                    @*@Html.HiddenFor(x => x.Email == User.Identity.Name)
                    @Html.HiddenFor(x => x.Description == "groceryDescription")
                    @Html.HiddenFor(x => x.Cost == Int32.Parse("groceryCost"))*@


                    <div style="margin-top:23px;">@Html.ActionLink("ADD", "Grocery", "BudgetItems", null, new { @class = "yellow-button" })</div>
                </div>                
            </form>
        </div>

        <div style="margin:120px;">@Html.ActionLink("budgetItems", "Edit", "BudgetItems", null, new { @class = "yellow-button" })</div>


        <p style="margin-top:50px;">Housing: Set Budget Limit</p>
        <p>Amount:</p>
        <p>Restaurants: Set Budget Limit</p>
        <p>Amount:</p>
        <p>Gas: Set Budget Limit</p>
        <p>Amount:</p>
        <p>Bills: Set Budget Limit</p>
        <p>Amount:</p>
        <p>Entertainment: Set Budget Limit</p>
        <p>Amount:</p>
        <p>Misc: Set Budget Limit</p>
    </div>
}

<style>


    input[type=text]:not(.browser-default) {
        background-color: black !important;
        color: #76ff03 !important;
        font-size: 30px;
    }

    input.valid[type=number]:not(.browser-default),
    input.valid[type=number]:not(.browser-default):focus,
    input.valid[type=text]:not(.browser-default),
    input.valid[type=text]:not(.browser-default):focus,
    #budget-limit-amount,
    #purchase-item {
        border-bottom: 2px solid #cfd8dc !important;
        color: #76ff03;
        font-size: 30px;
    }

    input[type=search]:not(.browser-default):focus:not([readonly]) {
        color: #cfd8dc !important;
        /*default white zero and white underline*/
    }

    .yellow-button {
        border-radius: 0px;
        border: 1px solid #cfd8dc;
        color: #cfd8dc;
        padding: 15px;
        background-color: black;
        font-weight: 400;
        font-size: 20px;
    }

        .yellow-button:hover {
            color: black !important;
            background-color: #76ff03;
            border: none;
        }
</style>

