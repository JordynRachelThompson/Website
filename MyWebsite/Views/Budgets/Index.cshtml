                        @if (remainingB <= 0)
                        {
                            <h5 style="margin-left:150px;"><span style="color:#e6c5c4">$@remainingB.ToString("#,##0.00")</span></h5>
                        }
                        else
                        {
                            <h5 style="margin-left:150px;"><span style="color:#54b798">$@remainingB.ToString("#,##0.00") left</span></h5>
                        }
