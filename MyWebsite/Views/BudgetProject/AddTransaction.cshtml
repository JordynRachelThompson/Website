@model MyWebsite.Models.BudgetProject.BudgetItems
    //Next Section: Add Budget Transactions
<div style="border-bottom: 1px dotted #76ff03;"></div>

<div class="container">
    @*GROCERY*@
    <div class="row">
        <form asp-action="Add" class="col m4">
            <h5 style="margin-top:25px; font-weight:bold;">Add Transaction</h5>
            <h5 style="margin-top:25px">Item</h5>
            <div class="input-field">
                <input name="Description" placeholder="Apples" id="purchase-item" style="margin-top: 25px;" type="text" class="validate">
            </div>
            <h5 style="margin-top:25px;">Price</h5>
            <div class="input-field">
                <i class="material-icons prefix" style="margin-top:30px; color:#76ff03;">attach_money</i>
                <input name="Cost" placeholder="0" id="budget-limit-amount" style="margin-top: 25px;" type="number" step="0.01" class="validate">
                @Html.Hidden("Email", User)
                @Html.Hidden("Description", "Description")
                @Html.Hidden("Cost", "Cost")
                @Html.Hidden("TypeOfBudget", 1)
                <div style="margin-top:23px;"><input type="submit" value="ADD" class="yellow-button" /></div>
            </div>
        </form>
    </div>
