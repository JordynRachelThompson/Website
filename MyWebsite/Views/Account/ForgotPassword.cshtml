@model ForgotPasswordViewModel
<link rel="stylesheet" href="~/css/materialize.css" />

<h3 class="centerAccountText" style="margin-top:150px;">Forgot Password</h3>

<div class="row" style=" margin:50px 10px;">
    <div class="accountBox col l6 m12 s12 offset-l3 z-depth-4">
        <form class="acctForm" asp-action="ForgotPassword" method="post">
            <h4 class="thinBlackHeading flow-text" style="margin-top:30px; margin-bottom: 30px;">Enter Your Email</h4>
            <div class="input-field">
                <i class="material-icons prefix">person_outline</i>
                <input asp-for="Email" id="Email" placeholder="Username" class="validate" required type="text" style="width:85%" />
                <label for="Email">Username</label>
                <p><span asp-validation-for="Email" class="validate"></span></p>
            </div>
            <button type="submit" class="waves-effect waves-light btn sharpCorners black-btn"><span class="fas fa-sign-in-alt"></span> Reset Password</button>
        </form>
        <div style="margin-top: 70px;">
            <a class="waves-effect waves-light btn sharpCorners black-btn" onclick="window.history.go(-1)" style="margin: 1px;"><i class="fas fa-backward" style="font-size: 15px;"></i> return</a>
        </div>
    </div>
</div>

