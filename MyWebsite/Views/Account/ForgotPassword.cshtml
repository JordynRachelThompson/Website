@model ForgotPasswordViewModel
<link rel="stylesheet" href="~/css/materialize.css" />

<h3 style="text-align:center; margin-top:100px; font-weight:200; letter-spacing:1.5px;">FORGOT PASSWORD</h3>

<div style="width: 30%; margin-left: 150px; margin-top: 150px;">
    <div class="row">
        <div class="col-s6">
            <h4 style="text-align:center; margin-top:100px; font-weight:200; letter-spacing:1.5px;">Enter Your Email</h4>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-group">
                            <label class="textGrey" asp-for="Email"></label>
                            <input asp-for="Email" style="color: #cfd8dc"/>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <button style="margin-top:10px; background-color:#81cac4; font-weight:bold;" type="submit" class=" waves-effect waves-light lightTeal-hover btn sharpCorners black-text">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div style="height:300px;"></div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
