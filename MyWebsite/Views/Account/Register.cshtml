@model RegisterViewModel
<link rel="stylesheet" href="~/css/materialize.css" />


<h3 style="text-align:center; margin-top:100px; font-weight:200; letter-spacing:1.5px;">REGISTER</h3>


<div style="margin:50px 100px;">
    <div class="row">
        <div class="col s6">
            <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                <h4 style="text-align:center; margin-top:100px; font-weight:200; letter-spacing:1.5px;">Create a new account</h4>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="textGrey" asp-for="Email"></label>
                    <input asp-for="Email" class="form-control textGrey" />
                    <span asp-validation-for="Email" class="textGrey"></span>
                </div>
                <div class="form-group">
                    <label class="textGrey" asp-for="Password"></label>
                    <input asp-for="Password" class="form-control textGrey" />
                    <span asp-validation-for="Password" class="textGrey"></span>
                </div>
                <div class="form-group">
                    <label class="textGrey" asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control textGrey" />
                    <span asp-validation-for="ConfirmPassword" class="textGrey"></span>
                </div>
                <button style="margin-top:10px;" type="submit" class=" waves-effect waves-light btn red accent-4 redButton">Register</button>
            </form>
        </div>
    </div>
</div>

<style>
    .sharpCorners {
        border-radius: 0px !important;
    }
</style>






@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

