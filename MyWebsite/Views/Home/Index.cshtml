    @*Apps*@
    <h3 id="Apps" class="thinHeading">Applications</h3>
    <div class="row" style="margin-top: 100px;">
        <div class="darkContainer col l12 z-depth-5">
            <div class="appBoxes z-depth-4" style="padding: 10px;">
                <h4 style="font-weight: 200;">The Painless Budget</h4>
                <a href='@Url.Action("Index", "Budgets")' class="waves-effect waves-light btn sharpCorners black-btn"><i class="fas fa-desktop"></i> View App</a>
                <a href='#' class="waves-effect waves-light btn sharpCorners black-btn"><i class="fas fa-code"></i> View GitHub</a>
                <h4 class="flow-text" style="padding: 10px; font-weight: 200;">@ViewBag.BudgetAppDescr</h4>
                <div class="col l10 offset-l4 col m12 offset-m3 hide-on-small-only">
                    <ul class="collapsible" style="margin: 5px 5px 40px;">
                        <li>
                            <div class="collapsible-header flow-text z-depth-3"><i class="far fa-window-minimize"></i> Painless Budget Features</div>
                            <div class="collapsible-body"><span>Create and save monthly budgets</span></div>
                            <div class="collapsible-body"><span>Option to re-use past budget settings for next month</span></div>
                            <div class="collapsible-body"><span>Add transactions by spending category</span></div>
                            <div class="collapsible-body"><span>Easy to view pie charts display current budget spending by category</span></div>
                        </li>
                        <li>
                            <div class="collapsible-header"><i class="far fa-window-minimize"></i>  Painless Budget Analytics</div>
                            <div class="collapsible-body"><span>View average monthly spending, most frequent transaction category, average amount over or under budget, average savings, and category with the highest average savings.</span></div>
                            <div class="collapsible-body"><span>View budget analytics by spending category to track which categories have the highest savings and are consistently over or under budget.</span></div>

                        </li>
                        <li>
                            <div class="collapsible-header"><i class="far fa-window-minimize"></i> Painless Budget Tracking</div>
                            <div class="collapsible-body"><span>Add, edit, and remove transactions</span></div>
                            <div class="collapsible-body"><span>Export a single budget or all past budgets to Excel</span></div>
                            <div class="collapsible-body"><span>View and edit transactions from previous budget months</span></div>
                            <div class="collapsible-body"><span>View pie charts by spending category for past budget months</span></div>
                        </li>
                    </ul>
                </div>
                <div class="carousel grabbing" style="margin-top: 50px;">
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget1.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget2.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget3.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget4.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget5.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget6.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget7.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget8.png" /></a>
                    <a class="carousel-item"><img src="~/images/painlessBudget/budget9.png" /></a>
                </div>
            </div>
            <div class="appBoxes">
                <h4>Open WeatherMap Element Tracker</h4>
                <a href='@Url.Action("Index", "OpenWeather")' class="waves-effect waves-light btn sharpCorners black-btn"><i class="fas fa-desktop"></i> View App</a>
                <a href='#' class="waves-effect waves-light btn sharpCorners black-btn"><i class="fas fa-code"></i> View GitHub</a>
                <h4 class="flow-text" style="padding: 10px; font-weight: 200;">@ViewBag.WeatherAppDescr</h4>         
                    <div class="col l10 offset-l4 col m12 offset-m3 hide-on-small-only">
                    <ul class="collapsible" style="margin: 5px 5px 40px;">
                        <li>
                            <div class="collapsible-header flow-text z-depth-3"><i class="far fa-window-minimize"></i> Element Tracker Features</div>
                            <div class="collapsible-body"><span>View 5 day, hourly forecast from Open WeatherMap for any city</span></div>
                            <div class="collapsible-body"><span>Option to view forecasts without registering or logging in</span></div>
                            <div class="collapsible-body"><span>Registered users can save their city and manage element alerts</span></div>
                            <div class="collapsible-body"><span>Users can turn on/off individual element alerts and change which email they want alerted</span></div>
                        </li>
                    </ul>
                </div>
                <div class="carousel grabbing">
                    <a class="carousel-item"><img src="~/images/weather/weather1.png" /></a>
                    <a class="carousel-item"><img src="~/images/weather/weather2.png" /></a>
                    <a class="carousel-item"><img src="~/images/weather/weather3.png" /></a>
                </div>
            </div>
        </div>
    </div>

    @*Experience - still needed id="Experience"*@

    @*Contact*@
    <h3 id="Contact" name="Contact" class="thinHeading">Contact</h3>
    <div class="row" style="margin: 100px 0px 100px">
        <div id="contactImage" class="col l12 s12 z-depth-5">
            <div class="accountBox col l12 s12 z-depth-4">
                <section>
                    <div class="acctForm">
                        <i class="far fa-user contactFormIcons"></i> 
                        <div class="input-field">
                            <input id="Name" placeholder="Name" class="validate appBoxes" required type="text" style="width:100%;" />
                            <label for="Name">Name</label>
                        </div>
                        <i class="fas fa-at contactFormIcons"></i>
                        <div class="input-field">
                            <input id="Email" placeholder="Email" class="validate appBoxes" required pattern=".*@@.*\..*" message="Please enter a valid email address." type="text" style="width:100%" />
                            <label for="Email">Email</label>
                        </div>
                        <i class="fas fa-comments contactFormIcons"></i>
                        <div class="input-field" style="margin-top: 30px;">
                            <textarea id="Message" style="color: white" placeholder="Message..." required type="text" class="validate appBoxes"></textarea>
                        </div>
                        <div>
                            @*<div><p style="color: #D50000;">@ViewBag.Error</p></div>*@
                            <button id="sendMsgBtn" class="waves-effect waves-light btn sharpCorners black-btn"><i class="far fa-paper-plane"></i> Send</button>
                        </div>
                        <div class="progress" style="display: none;">
                            <div class="indeterminate"></div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

</div>

